<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".password">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создайте пароль"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingLeft="150dp">

        </TextView>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:gravity="center"
        android:text="Для защиты ваших персональных данных"
        android:textSize="11dp"
        android:textColor="#939396">

    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/imageview_circle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/circle1"
            />
        <ImageView
            android:id="@+id/imageview_circle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/circle1"
            />
        <ImageView
            android:id="@+id/imageview_circle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/circle1"
            />
        <ImageView
            android:id="@+id/imageview_circle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/circle1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:text="1"
            android:textColor="@color/black"
            app:cornerRadius="75dp"
            android:backgroundTint="#F5F5F9"
            android:onClick="onClick1">

        </Button>

        <Button
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:text="2"
            android:textColor="@color/black"
            android:ems="2"
            app:cornerRadius="75dp"
            android:backgroundTint="#F5F5F9"
            android:onClick="onClick1">

        </Button>

        <Button
            android:layout_width="80dp"
            android:layout_height="90dp"
            app:cornerRadius="75dp"
            android:text="3"
            android:textColor="@color/black"
            android:ems="2"
            android:backgroundTint="#F5F5F9"
            android:onClick="onClick1">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp"
        >

        <Button
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            app:cornerRadius="75dp"
            android:text="4"
            android:textColor="@color/black"
            android:ems="2"
            android:backgroundTint="#F5F5F9"
            android:onClick="onClick1">

        </Button>

        <Button
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            app:cornerRadius="75dp"
            android:text="5"
            android:textColor="@color/black"
            android:ems="2"
            android:backgroundTint="#F5F5F9"
            android:onClick="onClick1">

        </Button>

        <Button
            android:layout_width="80dp"
            android:layout_height="90dp"
            app:cornerRadius="75dp"
            android:text="6"
            android:textColor="@color/black"
            android:ems="2"
            android:backgroundTint="#F5F5F9"
            android:onClick="onClick1">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            app:cornerRadius="75dp"
            android:text="7"
            android:textColor="@color/black"
            android:ems="2"
            android:backgroundTint="#F5F5F9"
            android:onClick="onClick1">

        </Button>

        <Button
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            app:cornerRadius="75dp"
            android:text="8"
            android:textColor="@color/black"
            android:ems="2"
            android:backgroundTint="#F5F5F9"
            android:onClick="onClick1">

        </Button>

        <Button
            android:layout_width="80dp"
            android:layout_height="90dp"
            app:cornerRadius="75dp"
            android:text="9"
            android:textColor="@color/black"
            android:ems="2"
            android:backgroundTint="#F5F5F9"
            android:onClick="onClick1">

        </Button>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="160dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="90dp"
            app:cornerRadius="75dp"
            android:text="0"
            android:textColor="@color/black"
            android:ems="2"
            android:backgroundTint="#F5F5F9"
            android:onClick="onClick1">

        </Button>

        <ImageButton
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/delete" />

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>